  <body>


    <div class="nav_bar">
    <!-- Navigation -->
    <nav class="w3-bar w3-black">
      <ul>
      <li><a href="/doctor">Home</a></li>
      <li><a href="/doctor/editProfile/<%=info.senderId%>"><%=info.sender.split(' ').slice(0,2).join(' ')%> </a></li>

