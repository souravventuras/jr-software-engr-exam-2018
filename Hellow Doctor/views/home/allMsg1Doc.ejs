             <li id="a"><a href="/logout" >Logout</a></li>

    </ul>
    </nav>

    </div>

    <h2>Inbox</h2>
    <br>
    <p><b><%=info.sender%> : </b></p>
      <form id="msg" method="post">
        <textarea name="msg" rows="4" cols="70" style="resize:none" placeholder="Write Your Message Here..."></textarea>
        <input type="hidden" id="date" name="date" value="">
        <input type="submit" name="submit" value="Reply">
        </form>
        <script>
        var t = Date();

        var d = t.substring(0,21);
          document.getElementById("date").value = d ;
        </script>
        <br><hr>
        <% for(var i = 0; i < allMsg.length; i++) { %>

          <p class="date"><%=allMsg[i].date%> </p>

          <p><b><%=allMsg[i].Fullname%> :</b> <%=allMsg[i].msg%></p>
          <br><hr>
          <% } %>
  </body>
</html>
